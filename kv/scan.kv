<CameraImage>:
    size_hint: .7, .7
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    allow_stretch: True
    keep_ratio: True

<ScanScreen>:
    name: "scan"
    canvas.before:
        Color:
            rgba: (221/255, 237/255, 233/255, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        CameraImage:
            id: camera_view
        
        MDProgressBar:
            id: progress
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint_x: 0.7
            type: "determinate"
            running_duration: 3
            catching_duration: 0
            color: "#1EDC5A"
            opacity: 0