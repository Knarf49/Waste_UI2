<Page2Screen>:
    name: "page2"
    canvas.before:
        Color:
            rgba: (221/255, 237/255, 233/255, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        Video:
            id: video_player
            source: ""
            state: "stop"
            allow_stretch: True
            options: {"eos": "loop"}
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDCard:
            size_hint: None, None
            size: "650dp", "120dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.09}
            md_bg_color: [0.85, 1, 0.85, 1]  # สีเขียวอ่อน
            elevation: 2
            radius: [10, 10, 10, 10]
            
        MDLabel:
            id: instruction_label
            text: "โปรดวางขยะไว้ในช่องสแกน"
            font_name: 'prompt-B'
            font_size: "50sp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.09}
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1

        MDSpinner:
            id: loading_spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .9, 'center_y': .1}
            color: 0.82, 0.44, 0.15, 1
            active: False
            opacity: 0