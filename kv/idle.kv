#: import NoTransition kivy.uix.screenmanager.NoTransition
<TapToAwakeScreen>:
    awake: False
    on_touch_down:
        app.root.transition=NoTransition() 
        app.root.current = "mascot"  # Navigate to the home screen on tap
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Black background
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "Tap anywhere"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            