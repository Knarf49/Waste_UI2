#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<ShowBinScreen>:
    name: "showbin"

    canvas.before:
        Color:
            rgba: (207/255, 241/255, 200/255, 1)  # Set background color
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        Video:
            id: showbin_video
            source: ""  # Start with no source, set it in Python
            state: "pause"  # Default state
            allow_stretch: True  # Allow stretching
            options: {"eos": "loop"}  # Loop when video ends
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

    FloatLayout:
        Button:
            background_color: 0, 0, 0, 0  # Fully transparent
            size_hint: 1, 1
            on_press:
                root.manager.transition= SlideTransition()
                app.root.current = "page2"