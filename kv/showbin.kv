<ShowbinScreen>:
    name: "showbin"
    canvas.before:
        Color:
            rgba: (231/255, 237/255, 233/255, 1)  # Set background color
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        Video:
            id: mascot_video
            source: "video/showbin.mp4"
            state: "play"
            allow_stretch: True
            options: {"eos": "loop"}
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDRaisedButton:
            id: delayed_button
            font_name: 'prompt-B'
            text: "ไปสแกนขยะกันเถอะ!"
            size_hint: None, None
            size: "400dp", "100dp"  # ปรับขนาดปุ่ม
            pos_hint: {"center_x": 0.85, "center_y": 0.1}
            font_size: "25sp"
            opacity: 1
            on_release:
                app.root.current = "page2"
                root.manager.transition.direction = 'left'
            md_bg_color: [0.85, 1, 0.85, 1]  # สีเขียวอ่อน
            text_color: [0, 0, 0, 1]
            line_color: [0, 0, 0, 1]
            line_width: 2
            elevation: 2
            ripple_color: [0.9, 0.9, 0.9, 1]