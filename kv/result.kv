<ResultScreen>:
    name: "result"
    canvas.before:
        Color:
            rgba: (207/255, 241/255, 200/255, 1)  # Set background color to white
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        # Video Player
        Video:
            id: res_recycle
            source: root.video_source  # Path to the fourth video
            state: "play" if root.video_source else "stop"
            allow_stretch: True
            options: {"eos": "loop"}  # Loop video when it ends
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": .5}


        # Icon Button using KivyMD
        MDFloatingActionButton:
            icon: "home-variant"  # Replace with the desired icon name from Material Icons
            text_color: 'white'
            size_hint: None, None
            size: "56dp", "56dp"
            md_bg_color: '#1EDC5A'
            pos_hint: {"center_x": 0.9, "center_y": 0.5}
            elevation_normal: 1
            on_release: 
                app.root.current = "EndCredit"

