<ResultScreen>:
    name: "result"
    canvas.before:
        Color:
            rgba: (221/255, 237/255, 233/255, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        MDRaisedButton:
            text: "กลับสู่หน้าหลัก"
            font_name: 'prompt-B'
            font_size: "25sp"
            size_hint: None, None
            size: "400dp", "200dp"
            pos_hint: {"center_x": 0.85, "center_y": 0.2}
            md_bg_color: [0.85, 1, 0.85, 1]  # สีเขียวอ่อน
            text_color: [0, 0, 0, 1]   # ตัวอักษรสีดำ
            line_color: [0, 0, 0, 1]   # เส้นขอบสีดำ
            line_width: 2              # ความหนาของเส้นขอบ
            elevation: 2               # เงาบางๆ
            ripple_color: [0.9, 0.9, 0.9, 1]  # สีเมื่อกดปุ่ม