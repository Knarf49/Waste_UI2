#: import NoTransition kivy.uix.screenmanager.NoTransition

<Mascot2Screen>:
    name: "mascot2"
    canvas.before:
        Color:
            rgba: (221/255, 237/255, 233/255, 1)  # Set background color
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        Video:
            id: mascot_video
            source: ""  # Start with no source, set it in Python
            state: "pause"  # Default state
            allow_stretch: True  # Allow stretching
            options: {"eos": "loop"}  # Loop when video ends
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

